% Check if a question has just been asked.
\newcounter{justquestioned}

\newcommand{\question}[3][0]{%
\noindent\textbf{#2.} #3%
\setcounter{justquestioned}{1}
\stepcounter{questions}%
\ifnum#1=1\relax
	\else
		{\listxadd{\questionslist}{#2}}
	\fi
}
% Newline if a question has just been asked.
\newcommand{\qprt}[2]{
	\ifnum\value{justquestioned}=1
		\\
		\setcounter{justquestioned}{0}
	\fi
% put qprts in boxes so they're aligned.
\makebox[4ex][c]{\textbf{(#1)}}\space#2
}

